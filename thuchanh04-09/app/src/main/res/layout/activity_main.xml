<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nút chọn thư mục hình ảnh -->
    <Button
        android:id="@+id/btnSelectFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn thư mục hình ảnh" />

    <!-- Nút hiển thị tất cả hình ảnh -->
    <Button
        android:id="@+id/btnShowImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển thị tất cả hình ảnh" />

    <!-- AutoCompleteTextView để tìm kiếm từ khóa -->
    <AutoCompleteTextView
        android:id="@+id/autoCompleteSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tìm kiếm hình ảnh" />

    <!-- RecyclerView để hiển thị danh sách hình ảnh -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
